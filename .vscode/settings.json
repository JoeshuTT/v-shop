{
  // editor
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // inlayHints
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",
  // spell check
  "cSpell.words": [
    "avic",
    "browserslist",
    "compressorjs",
    "Eruda",
    "flashdeliver",
    "groupon",
    "gsap",
    "Lazyload",
    "Localforage",
    "openid",
    "ordermeal",
    "ordermealwx",
    "Pinia",
    "pnpm",
    "prefetch",
    "scroller",
    "Seckill",
    "superdesk",
    "swipeable",
    "tabbar",
    "tailwindcss",
    "unplugin",
    "unref",
    "vant",
    "vconsole",
    "vite",
    "vitejs",
    "vueuse",
    "vuex"
  ],
  "cSpell.ignorePaths": [
    "pnpm-lock.yaml",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders"
  ]
}
